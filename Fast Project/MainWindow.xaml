<Window x:Class="Fast_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0">
            
        </ListBox>
        <StackPanel Grid.Column="1">
            <TextBox Text="{Binding Path=TextBody, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button Content="Project" HorizontalAlignment="Left" Margin="45,71,0,0" VerticalAlignment="Top" Width="75" Click="ShowDisplayButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
